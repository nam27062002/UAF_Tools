<Window x:Class="DANCustomTools.Views.Dialogs.NewActorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Create New Actor"
        Width="650" Height="550"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource GameEditorBackgroundBrush}"
        FontFamily="Segoe UI">

    <Window.Resources>
        <Style x:Key="DialogButtonStyle" TargetType="Button" BasedOn="{StaticResource GameEditorToolButtonStyle}">
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="4"/>
        </Style>

        <Style x:Key="ValidationGroupBoxStyle" TargetType="GroupBox">
            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="8"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsValid}" Value="False">
                    <Setter Property="Foreground" Value="Crimson"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ValidationLabelStyle" TargetType="Label">
            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsValid}" Value="False">
                    <Setter Property="Foreground" Value="Crimson"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ComponentListBoxStyle" TargetType="ListBox">
            <Setter Property="Background" Value="{DynamicResource MaterialDesignCardBackground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource MaterialDesignDivider}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
        </Style>

        <Style x:Key="ComponentListBoxItemStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="1"/>
            <Setter Property="Background" Value="Transparent"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource MaterialDesignSelection}"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{DynamicResource MaterialDesignSelection}"/>
                    <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <materialDesign:Card Style="{StaticResource GameEditorCardStyle}" Margin="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="{StaticResource GameEditorAccentBrush}"
                    Padding="16,12"
                    CornerRadius="4,4,0,0">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="AccountPlus"
                                             Width="24" Height="24"
                                             VerticalAlignment="Center"
                                             Foreground="White"/>
                    <TextBlock Text="Create New Actor"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="12,0,0,0"/>
                </StackPanel>
            </Border>

            <!-- Actor Path Section -->
            <Grid Grid.Row="1" Margin="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label x:Name="LabelActorPath"
                       Grid.Column="0"
                       Content="Actor Path:"
                       Style="{StaticResource ValidationLabelStyle}"
                       VerticalAlignment="Center"
                       Margin="0,0,8,0"/>

                <TextBox x:Name="TextBoxActorPath"
                         Grid.Column="1"
                         materialDesign:HintAssist.Hint="Enter actor file path (.act)"
                         materialDesign:HintAssist.IsFloating="False"
                         FontFamily="Consolas, Courier New, monospace"
                         FontSize="11"
                         TextChanged="ActorPath_TextChanged"/>

                <Button Grid.Column="2"
                        Content="..."
                        Style="{StaticResource DialogButtonStyle}"
                        Width="40"
                        Margin="8,0,0,0"
                        Click="BrowseActorPath_Click"/>
            </Grid>

            <!-- Components Section -->
            <GroupBox x:Name="GroupBoxComponents"
                      Grid.Row="2"
                      Header="Select Components"
                      Style="{StaticResource ValidationGroupBoxStyle}"
                      Margin="16,0,16,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Available Components -->
                    <DockPanel Grid.Column="0" Margin="0,8,8,0">
                        <Label DockPanel.Dock="Top"
                               Content="Available Components"
                               FontWeight="SemiBold"
                               Margin="0,0,0,4"/>

                        <!-- Search Section -->
                        <Border DockPanel.Dock="Top"
                                BorderBrush="{DynamicResource MaterialDesignDivider}"
                                BorderThickness="1"
                                Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <materialDesign:PackIcon Grid.Column="0"
                                                         Kind="Magnify"
                                                         Width="16" Height="16"
                                                         VerticalAlignment="Center"
                                                         Margin="8,0,4,0"
                                                         Opacity="0.6"/>

                                <TextBox x:Name="TextBoxFilter"
                                         Grid.Column="1"
                                         materialDesign:HintAssist.Hint="Filter components..."
                                         materialDesign:HintAssist.IsFloating="False"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         FontSize="11"
                                         TextChanged="Filter_TextChanged"/>

                                <Button Grid.Column="2"
                                        Content="✕"
                                        Style="{StaticResource GameEditorToolButtonStyle}"
                                        Width="20" Height="20"
                                        FontSize="10"
                                        Margin="4,2"
                                        Click="ClearFilter_Click"/>
                            </Grid>
                        </Border>

                        <!-- Available Components List -->
                        <ListBox x:Name="ListBoxAvailableComponents"
                                 Style="{StaticResource ComponentListBoxStyle}"
                                 ItemContainerStyle="{StaticResource ComponentListBoxItemStyle}"
                                 MouseDoubleClick="AvailableComponents_DoubleClick"/>
                    </DockPanel>

                    <!-- Move Buttons -->
                    <StackPanel Grid.Column="1"
                                Orientation="Vertical"
                                VerticalAlignment="Center"
                                Margin="8">
                        <Button Content="▶"
                                Style="{StaticResource DialogButtonStyle}"
                                Width="40" Height="40"
                                FontSize="14"
                                Margin="0,4"
                                Click="AddComponent_Click"
                                ToolTip="Add selected component"/>

                        <Button Content="◀"
                                Style="{StaticResource DialogButtonStyle}"
                                Width="40" Height="40"
                                FontSize="14"
                                Margin="0,4"
                                Click="RemoveComponent_Click"
                                ToolTip="Remove selected component"/>

                        <Button Content="▶▶"
                                Style="{StaticResource DialogButtonStyle}"
                                Width="40" Height="40"
                                FontSize="12"
                                Margin="0,4"
                                Click="AddAllComponents_Click"
                                ToolTip="Add all components"/>

                        <Button Content="◀◀"
                                Style="{StaticResource DialogButtonStyle}"
                                Width="40" Height="40"
                                FontSize="12"
                                Margin="0,4"
                                Click="RemoveAllComponents_Click"
                                ToolTip="Remove all components"/>
                    </StackPanel>

                    <!-- Added Components -->
                    <DockPanel Grid.Column="2" Margin="8,8,0,0">
                        <Label DockPanel.Dock="Top"
                               Content="Selected Components"
                               FontWeight="SemiBold"
                               Margin="0,0,0,4"/>

                        <TextBlock DockPanel.Dock="Top"
                                   Text="Double-click to remove components"
                                   FontSize="11"
                                   Opacity="0.7"
                                   Margin="0,0,0,8"/>

                        <!-- Added Components List -->
                        <ListBox x:Name="ListBoxAddedComponents"
                                 Style="{StaticResource ComponentListBoxStyle}"
                                 ItemContainerStyle="{StaticResource ComponentListBoxItemStyle}"
                                 MouseDoubleClick="AddedComponents_DoubleClick"/>
                    </DockPanel>
                </Grid>
            </GroupBox>

            <!-- Button Panel -->
            <Border Grid.Row="3"
                    Background="{DynamicResource MaterialDesignDivider}"
                    Padding="16,12">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Style="{StaticResource DialogButtonStyle}"
                            Content="Cancel"
                            IsCancel="True"
                            Click="CancelButton_Click">
                        <Button.ToolTip>
                            <ToolTip Content="Cancel actor creation"/>
                        </Button.ToolTip>
                    </Button>

                    <Button x:Name="ButtonCreateAndSave"
                            Style="{StaticResource DialogButtonStyle}"
                            Content="Create and Save"
                            IsDefault="True"
                            IsEnabled="False"
                            Click="CreateAndSaveButton_Click">
                        <Button.ToolTip>
                            <ToolTip Content="Create new actor with selected components"/>
                        </Button.ToolTip>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </materialDesign:Card>
</Window>