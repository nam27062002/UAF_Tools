<UserControl x:Class="DANCustomTools.Views.SceneExplorerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:DANCustomTools.Converters"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.Resources>
        <converters:ObjectTypeConverter x:Key="ObjectTypeConverter"/>
        <converters:BoolToOnlineStatusConverter x:Key="BoolToOnlineStatusConverter"/>
        <converters:BoolToStatusColorConverter x:Key="BoolToStatusColorConverter"/>
        <converters:ConnectionStatusColorConverter x:Key="ConnectionStatusColorConverter"/>
        <converters:TreeItemIconConverter x:Key="TreeItemIconConverter"/>
        <converters:TreeItemTextFallbackConverter x:Key="TreeItemTextFallbackConverter"/>
        <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Material Design TreeView Item Style -->
        <Style x:Key="MaterialTreeViewItemStyle" TargetType="TreeViewItem">
            <Setter Property="IsExpanded" Value="True"/>
            <Setter Property="Padding" Value="4,2"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{DynamicResource MaterialDesignSelection}"/>
                    <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource MaterialDesignDivider}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Search TextBox Style -->
        <Style x:Key="SearchTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource GameEditorSearchBoxStyle}">
            <Setter Property="Margin" Value="12"/>
        </Style>
    </UserControl.Resources>

    <materialDesign:Card Style="{StaticResource GameEditorCardStyle}" Margin="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header with Connection Status -->
            <Border Grid.Row="0"
                    Background="{StaticResource GameEditorHeaderBrush}"
                    Padding="16,12">
                <DockPanel>
                    <materialDesign:PackIcon Kind="FileTree"
                                             Width="22" Height="22"
                                             VerticalAlignment="Center"
                                             Foreground="White"
                                             DockPanel.Dock="Left"/>
                    <TextBlock Text="Scene Explorer"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="12,0,0,0"
                               DockPanel.Dock="Left"/>

                    <!-- Connection Status -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                DockPanel.Dock="Right">
                        <Ellipse Width="8" Height="8"
                                 Margin="0,0,6,0"
                                 VerticalAlignment="Center">
                            <Ellipse.Style>
                                <Style TargetType="Ellipse">
                                    <Setter Property="Fill" Value="{StaticResource GameEditorWarningBrush}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                            <Setter Property="Fill" Value="{StaticResource GameEditorSuccessBrush}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Ellipse.Style>
                        </Ellipse>
                        <TextBlock Text="{Binding IsConnected, Converter={StaticResource BoolToOnlineStatusConverter}}"
                                   FontSize="11"
                                   FontWeight="Medium"
                                   Foreground="White"
                                   VerticalAlignment="Center"
                                   Opacity="0.9"/>
                    </StackPanel>
                </DockPanel>
            </Border>

            <!-- Search Box -->
            <TextBox Grid.Row="1"
                     Name="SearchTextBox"
                     Style="{StaticResource SearchTextBoxStyle}"
                     TextChanged="SearchTextBox_TextChanged"/>

            <!-- Action Buttons -->
            <WrapPanel Grid.Row="2"
                       Orientation="Horizontal"
                       Margin="8,0,8,8">
                <Button Style="{StaticResource GameEditorToolButtonStyle}"
                        ToolTip="Refresh Scene Tree"
                        Command="{Binding RefreshCommand}"
                        Margin="4,2">
                    <materialDesign:PackIcon Kind="Refresh" Width="20" Height="20"/>
                </Button>

                <Button Style="{StaticResource GameEditorToolButtonStyle}"
                        ToolTip="Expand All"
                        Click="ExpandAllButton_Click"
                        Margin="4,2">
                    <materialDesign:PackIcon Kind="UnfoldMoreHorizontal" Width="20" Height="20"/>
                </Button>

                <Button Style="{StaticResource GameEditorToolButtonStyle}"
                        ToolTip="Collapse All"
                        Click="CollapseAllButton_Click"
                        Margin="4,2">
                    <materialDesign:PackIcon Kind="UnfoldLessHorizontal" Width="20" Height="20"/>
                </Button>
            </WrapPanel>

            <!-- Component Filter Section -->
            <Border Grid.Row="3"
                    Margin="8,0,8,4"
                    Background="{DynamicResource MaterialDesignBackground}"
                    CornerRadius="4"
                    BorderThickness="1"
                    BorderBrush="{DynamicResource MaterialDesignDivider}">
                <Expander Header="Component Filters"
                          IsExpanded="False"
                          Padding="8">
                    <Expander.HeaderTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Filter"
                                                         Width="16" Height="16"
                                                         VerticalAlignment="Center"
                                                         Margin="0,0,8,0"/>
                                <TextBlock Text="{Binding}"
                                           VerticalAlignment="Center"
                                           FontWeight="Medium"/>
                                <TextBlock Text="{Binding DataContext.SelectedComponents.Count, RelativeSource={RelativeSource AncestorType=UserControl}, StringFormat='({0} selected)'}"
                                           VerticalAlignment="Center"
                                           Margin="6,0,0,0"
                                           FontSize="11"
                                           Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                            </StackPanel>
                        </DataTemplate>
                    </Expander.HeaderTemplate>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Filter Controls -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                            <Button Content="Clear All Filters"
                                    Command="{Binding ClearFiltersCommand}"
                                    Padding="12,4"
                                    FontSize="11"
                                    Background="Transparent"
                                    BorderBrush="{DynamicResource MaterialDesignDivider}"
                                    BorderThickness="1">
                                <Button.IsEnabled>
                                    <Binding Path="IsComponentFilterEnabled"/>
                                </Button.IsEnabled>
                            </Button>

                            <TextBlock Text="{Binding AvailableComponents.Count, StringFormat={}{0} components available}"
                                       VerticalAlignment="Center"
                                       Margin="12,0,0,0"
                                       FontSize="11"
                                       Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                        </StackPanel>

                        <!-- Component List -->
                        <ScrollViewer Grid.Row="2"
                                      MaxHeight="200"
                                      VerticalScrollBarVisibility="Auto"
                                      Padding="0,0,8,0">
                            <ItemsControl ItemsSource="{Binding AvailableComponents}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <ToggleButton Content="{Binding DisplayText}"
                                                      IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                      Command="{Binding DataContext.ToggleComponentFilterCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                      CommandParameter="{Binding}"
                                                      Margin="2"
                                                      Padding="8,4"
                                                      FontSize="10">
                                            <ToggleButton.Style>
                                                <Style TargetType="ToggleButton">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="BorderBrush" Value="{DynamicResource MaterialDesignDivider}"/>
                                                    <Setter Property="BorderThickness" Value="1"/>
                                                    <Setter Property="Padding" Value="8,4"/>
                                                    <Setter Property="Margin" Value="2"/>
                                                    <Setter Property="FontSize" Value="10"/>
                                                    <Setter Property="Cursor" Value="Hand"/>
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="ToggleButton">
                                                                <Border Background="{TemplateBinding Background}"
                                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                                        CornerRadius="3"
                                                                        Padding="{TemplateBinding Padding}">
                                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                                      VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsChecked" Value="True">
                                                            <Setter Property="Background" Value="{DynamicResource PrimaryHueMidBrush}"/>
                                                            <Setter Property="Foreground" Value="White"/>
                                                            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryHueMidBrush}"/>
                                                        </Trigger>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="{DynamicResource MaterialDesignDivider}"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </ToggleButton.Style>
                                        </ToggleButton>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Expander>
            </Border>

            <!-- Main Tree View -->
            <Border Grid.Row="4"
                    Margin="8,0,8,8"
                    Background="{DynamicResource MaterialDesignBackground}"
                    CornerRadius="4">
                <Grid>
                    <!-- Empty State -->
                    <StackPanel VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Visibility="{Binding SceneTreeItems.Count, Converter={StaticResource CountToVisibilityConverter}}">
                        <materialDesign:PackIcon Kind="FileTreeOutline"
                                                 Width="64" Height="64"
                                                 Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                 HorizontalAlignment="Center"/>
                        <TextBlock Text="No scene data available"
                                   FontSize="16"
                                   Foreground="{DynamicResource MaterialDesignBodyLight}"
                                   HorizontalAlignment="Center"
                                   Margin="0,8,0,4"/>
                        <TextBlock Text="Connect to engine to load scene hierarchy"
                                   FontSize="12"
                                   Foreground="{DynamicResource MaterialDesignBodyLight}"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"/>
                    </StackPanel>

                    <!-- Tree View -->
                    <TreeView Name="SceneTreeView"
                              ItemsSource="{Binding SceneTreeItems}"
                              Background="Transparent"
                              BorderThickness="0"
                              VirtualizingStackPanel.IsVirtualizing="False"
                              ScrollViewer.CanContentScroll="False"
                              SelectedItemChanged="TreeView_SelectedItemChanged"
                              MouseRightButtonUp="TreeView_MouseRightButtonUp"
                              KeyDown="TreeView_KeyDown"
                              ItemContainerStyle="{StaticResource MaterialTreeViewItemStyle}">
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                <StackPanel Orientation="Horizontal"
                                            Margin="4,2">
                                    <!-- Original Item Icon -->
                                    <Image Source="{Binding ItemType, Converter={StaticResource TreeItemIconConverter}}"
                                           Width="16" Height="16" Margin="0,0,4,0"
                                           VerticalAlignment="Center"
                                           Stretch="Uniform"
                                           RenderOptions.BitmapScalingMode="HighQuality"/>

                                    <!-- Item Text -->
                                    <TextBlock Text="{Binding DisplayName}"
                                               VerticalAlignment="Center"
                                               FontSize="13"/>
                                </StackPanel>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </Grid>
            </Border>

            <!-- Status Bar -->
            <Border Grid.Row="5"
                    Background="{StaticResource GameEditorBorderBrush}"
                    Padding="16,8">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="ViewList"
                                             Width="14" Height="14"
                                             VerticalAlignment="Center"
                                             Foreground="{StaticResource GameEditorTextSecondaryBrush}"/>
                    <TextBlock Text="{Binding SceneTreeItems.Count, StringFormat='Scenes: {0}'}"
                               FontSize="11"
                               FontWeight="Medium"
                               Foreground="{StaticResource GameEditorTextSecondaryBrush}"
                               Margin="6,0,20,0"
                               VerticalAlignment="Center"/>

                    <!-- Component Filter Status -->
                    <materialDesign:PackIcon Kind="Filter"
                                             Width="14" Height="14"
                                             VerticalAlignment="Center"
                                             Foreground="{StaticResource GameEditorTextSecondaryBrush}"
                                             Visibility="{Binding IsComponentFilterEnabled, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    <TextBlock Text="{Binding SelectedComponents.Count, StringFormat='Filters: {0}'}"
                               FontSize="11"
                               FontWeight="Medium"
                               Foreground="{StaticResource GameEditorTextSecondaryBrush}"
                               Margin="6,0,20,0"
                               VerticalAlignment="Center"
                               Visibility="{Binding IsComponentFilterEnabled, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                    <materialDesign:PackIcon Kind="CursorDefault"
                                             Width="14" Height="14"
                                             VerticalAlignment="Center"
                                             Foreground="{StaticResource GameEditorTextSecondaryBrush}"/>
                    <TextBlock Text="{Binding SelectedObject.FriendlyName, StringFormat='Selected: {0}', FallbackValue='No selection'}"
                               FontSize="11"
                               FontWeight="Medium"
                               Foreground="{StaticResource GameEditorTextSecondaryBrush}"
                               Margin="6,0,0,0"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </materialDesign:Card>
</UserControl>
