<Window x:Class="DANCustomTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DANCustomTools"
        xmlns:viewModels="clr-namespace:DANCustomTools.ViewModels"
        xmlns:editorViewModels="clr-namespace:DANCustomTools.Tools.Editor.ViewModels"
        xmlns:assetsCookerViewModels="clr-namespace:DANCustomTools.Tools.AssetsCooker.ViewModels"
        xmlns:views="clr-namespace:DANCustomTools.Views"
        xmlns:editorViews="clr-namespace:DANCustomTools.Tools.Editor.Views"
        xmlns:assetsCookerViews="clr-namespace:DANCustomTools.Tools.AssetsCooker.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="UAF Tools" Height="700" Width="1200"
        Background="{StaticResource GameEditorBackgroundBrush}"
        FontFamily="Segoe UI"
        WindowState="Maximized">

    <Window.Resources>
        <!-- DataTemplate for EditorMainViewModel -->
        <DataTemplate DataType="{x:Type editorViewModels:EditorMainViewModel}">
            <editorViews:EditorMainView DataContext="{Binding}"/>
        </DataTemplate>

        <!-- DataTemplate for AssetsCookerMainViewModel -->
        <DataTemplate DataType="{x:Type assetsCookerViewModels:AssetsCookerMainViewModel}">
            <assetsCookerViews:AssetsCookerMainView DataContext="{Binding}"/>
        </DataTemplate>

        <!-- DataTemplate for SceneExplorerViewModel -->
        <DataTemplate DataType="{x:Type viewModels:SceneExplorerViewModel}">
            <views:SceneExplorerView DataContext="{Binding}"/>
        </DataTemplate>

        <!-- DataTemplate for PropertiesEditorViewModel -->
        <DataTemplate DataType="{x:Type viewModels:PropertiesEditorViewModel}">
            <views:PropertiesEditorView DataContext="{Binding}"/>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <MenuItem Header="Tools" FontSize="14" Padding="12,6">
                <MenuItem Header="TeaBox"
                          Command="{Binding LaunchTeaBoxCommand}"
                          Icon="{materialDesign:PackIcon Kind=Hammer,Size=16}">
                    <MenuItem.ToolTip>
                        <ToolTip Content="Launch TeaBox build automation tool"/>
                    </MenuItem.ToolTip>
                </MenuItem>
            </MenuItem>
        </Menu>

        <!-- Header with Navigation -->
        <Border Grid.Row="1"
                Background="{StaticResource GameEditorHeaderBrush}"
                Padding="20,8">
            <Border.Effect>
                <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.1" Color="#000000"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo and Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="Tools"
                                             Width="28" Height="28"
                                                     Foreground="White"
                                                     VerticalAlignment="Center"/>
                    <StackPanel Margin="16,0,0,0">
                            <TextBlock Text="UAF Tools"
                                   FontSize="20"
                                   FontWeight="Bold"
                                       Foreground="White"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>

                <!-- Main Tools Navigation -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Margin="40,0,0,0">

                        <!-- Editor Tool -->
                        <Button Command="{Binding SwitchToEditorCommand}"
                            Margin="0,0,16,0"
                            Padding="16,8">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="8"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#1AFFFFFF"/>
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter Property="Background" Value="#33FFFFFF"/>
                                                    </Trigger>
                                                    <Trigger Property="IsEnabled" Value="False">
                                                        <Setter Property="Opacity" Value="0.6"/>
                                                        <Setter Property="Cursor" Value="Arrow"/>
                                                    </Trigger>
                                                    <DataTrigger Binding="{Binding IsEditorActive}" Value="True">
                                                        <Setter Property="Background" Value="#2AFFFFFF"/>
                                                        <Setter Property="BorderBrush" Value="#4AFFFFFF"/>
                                                        <Setter Property="BorderThickness" Value="1"/>
                                                        <Setter Property="Effect">
                                                            <Setter.Value>
                                                                <DropShadowEffect BlurRadius="4" ShadowDepth="2" Opacity="0.3" Color="#FFFFFF"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </DataTrigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="GamepadVariant"
                                                         Width="20" Height="20"
                                                     Foreground="White"
                                                     VerticalAlignment="Center">
                                    <materialDesign:PackIcon.Style>
                                        <Style TargetType="materialDesign:PackIcon">
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="Opacity" Value="1.0"/>
                                        </Style>
                                    </materialDesign:PackIcon.Style>
                                </materialDesign:PackIcon>
                            <StackPanel Margin="8,0,0,0">
                                <TextBlock Text="Editor"
                                           FontSize="13"
                                           FontWeight="SemiBold"
                                           Foreground="White"
                                           VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="White"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsEditorActive}" Value="True">
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                    <Setter Property="Foreground" Value="#FFFFFF"/>
                                                    <Setter Property="Opacity" Value="1.0"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                            </StackPanel>
                        </Button>

                        <!-- Assets Cooker Tool -->
                        <Button Command="{Binding SwitchToAssetsCookerCommand}"
                            Padding="16,8">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="8"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#1AFFFFFF"/>
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter Property="Background" Value="#33FFFFFF"/>
                                                    </Trigger>
                                                    <Trigger Property="IsEnabled" Value="False">
                                                        <Setter Property="Opacity" Value="0.6"/>
                                                        <Setter Property="Cursor" Value="Arrow"/>
                                                    </Trigger>
                                                    <DataTrigger Binding="{Binding IsAssetsCookerActive}" Value="True">
                                                        <Setter Property="Background" Value="#2AFFFFFF"/>
                                                        <Setter Property="BorderBrush" Value="#4AFFFFFF"/>
                                                        <Setter Property="BorderThickness" Value="1"/>
                                                        <Setter Property="Effect">
                                                            <Setter.Value>
                                                                <DropShadowEffect BlurRadius="4" ShadowDepth="2" Opacity="0.3" Color="#FFFFFF"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </DataTrigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Cog"
                                                         Width="20" Height="20"
                                                     Foreground="White"
                                                     VerticalAlignment="Center">
                                    <materialDesign:PackIcon.Style>
                                        <Style TargetType="materialDesign:PackIcon">
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="Opacity" Value="0.7"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsAssetsCookerActive}" Value="True">
                                                    <Setter Property="Opacity" Value="1.0"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </materialDesign:PackIcon.Style>
                                </materialDesign:PackIcon>
                            <StackPanel Margin="8,0,0,0">
                                <TextBlock Text="Assets Cooker"
                                           FontSize="13"
                                           FontWeight="SemiBold"
                                           Foreground="White"
                                           VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="Opacity" Value="0.7"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsAssetsCookerActive}" Value="True">
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                    <Setter Property="Foreground" Value="#FFFFFF"/>
                                                    <Setter Property="Opacity" Value="1.0"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                            </StackPanel>
                        </Button>
                    </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <ContentControl Grid.Row="2"
                        Content="{Binding CurrentToolViewModel}"
                        Margin="0"/>
    </Grid>
</Window>
