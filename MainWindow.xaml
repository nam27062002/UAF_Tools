<Window x:Class="DANCustomTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DANCustomTools"
        xmlns:viewModels="clr-namespace:DANCustomTools.ViewModels"
        xmlns:editorViewModels="clr-namespace:DANCustomTools.Tools.Editor.ViewModels"
        xmlns:assetsCookerViewModels="clr-namespace:DANCustomTools.Tools.AssetsCooker.ViewModels"
        xmlns:views="clr-namespace:DANCustomTools.Views"
        xmlns:editorViews="clr-namespace:DANCustomTools.Tools.Editor.Views"
        xmlns:assetsCookerViews="clr-namespace:DANCustomTools.Tools.AssetsCooker.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="UAF Tools" Height="700" Width="1200"
        Background="{StaticResource GameEditorBackgroundBrush}"
        FontFamily="Segoe UI"
        WindowState="Maximized">

    <Window.Resources>
        <!-- DataTemplate for EditorMainViewModel -->
        <DataTemplate DataType="{x:Type editorViewModels:EditorMainViewModel}">
            <editorViews:EditorMainView DataContext="{Binding}"/>
        </DataTemplate>

        <!-- DataTemplate for AssetsCookerMainViewModel -->
        <DataTemplate DataType="{x:Type assetsCookerViewModels:AssetsCookerMainViewModel}">
            <assetsCookerViews:AssetsCookerMainView DataContext="{Binding}"/>
        </DataTemplate>

        <!-- DataTemplate for SceneExplorerViewModel -->
        <DataTemplate DataType="{x:Type viewModels:SceneExplorerViewModel}">
            <views:SceneExplorerView DataContext="{Binding}"/>
        </DataTemplate>

        <!-- DataTemplate for PropertiesEditorViewModel -->
        <DataTemplate DataType="{x:Type viewModels:PropertiesEditorViewModel}">
            <views:PropertiesEditorView DataContext="{Binding}"/>
        </DataTemplate>
    </Window.Resources>

    <!-- Main Layout -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Reconnect Button -->
        <Border Grid.Row="0"
                Background="{StaticResource GameEditorHeaderBrush}"
                Padding="16,8">
            <DockPanel>
                <TextBlock Text="UAF Tools"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="White"
                           VerticalAlignment="Center"
                           DockPanel.Dock="Left"/>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            DockPanel.Dock="Right">
                    <Button Content="Reconnect"
                            Command="{Binding ReconnectCommand}"
                            Background="{StaticResource GameEditorSuccessBrush}"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="12,6"
                            Margin="0,0,8,0"
                            FontSize="12"
                            FontWeight="Medium"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="4"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"
                                                                  TextBlock.Foreground="{TemplateBinding Foreground}"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#4CAF50"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#45A049"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Main Content Area -->
        <ContentControl Grid.Row="1"
                        Content="{Binding CurrentToolViewModel}"
                        Margin="0"/>
    </Grid>
</Window>
