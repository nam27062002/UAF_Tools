<Window x:Class="DANCustomTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DANCustomTools"
        xmlns:viewModels="clr-namespace:DANCustomTools.ViewModels"
        xmlns:editorViewModels="clr-namespace:DANCustomTools.Tools.Editor.ViewModels"
        xmlns:assetsCookerViewModels="clr-namespace:DANCustomTools.Tools.AssetsCooker.ViewModels"
        xmlns:views="clr-namespace:DANCustomTools.Views"
        xmlns:editorViews="clr-namespace:DANCustomTools.Tools.Editor.Views"
        xmlns:assetsCookerViews="clr-namespace:DANCustomTools.Tools.AssetsCooker.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="UAF Tools" Height="700" Width="1200"
        Background="{StaticResource GameEditorBackgroundBrush}"
        FontFamily="Segoe UI"
        WindowState="Maximized">

    <Window.Resources>
        <!-- DataTemplate for EditorMainViewModel -->
        <DataTemplate DataType="{x:Type editorViewModels:EditorMainViewModel}">
            <editorViews:EditorMainView DataContext="{Binding}"/>
        </DataTemplate>

        <!-- DataTemplate for AssetsCookerMainViewModel -->
        <DataTemplate DataType="{x:Type assetsCookerViewModels:AssetsCookerMainViewModel}">
            <assetsCookerViews:AssetsCookerMainView DataContext="{Binding}"/>
        </DataTemplate>

        <!-- DataTemplate for SceneExplorerViewModel -->
        <DataTemplate DataType="{x:Type viewModels:SceneExplorerViewModel}">
            <views:SceneExplorerView DataContext="{Binding}"/>
        </DataTemplate>

        <!-- DataTemplate for ActorCreateViewModel -->
        <DataTemplate DataType="{x:Type viewModels:ActorCreateViewModel}">
            <views:ActorCreateView DataContext="{Binding}"/>
        </DataTemplate>

        <!-- DataTemplate for PropertiesEditorViewModel -->
        <DataTemplate DataType="{x:Type viewModels:PropertiesEditorViewModel}">
            <views:PropertiesEditorView DataContext="{Binding}"/>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Sidebar - Main Tools -->
        <Border Grid.Column="0"
                Background="{StaticResource GameEditorSurfaceBrush}"
                BorderBrush="{StaticResource GameEditorBorderBrush}"
                BorderThickness="0,0,1,0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.1" Color="#000000"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0"
                        Background="{StaticResource GameEditorPrimaryBrush}"
                        Padding="20,16">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,0,0,8">
                            <materialDesign:PackIcon Kind="Tools"
                                                     Width="24" Height="24"
                                                     Foreground="White"
                                                     VerticalAlignment="Center"/>
                            <TextBlock Text="UAF Tools"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       VerticalAlignment="Center"
                                       Margin="12,0,0,0"/>
                        </StackPanel>
                        <TextBlock Text="Main Tools"
                                   FontSize="13"
                                   Foreground="White"
                                   Opacity="0.8"/>
                    </StackPanel>
                </Border>

                <!-- Tools List -->
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Margin="12">
                        <!-- Editor Tool -->
                        <Button Command="{Binding SwitchToEditorCommand}"
                                Margin="0,0,0,8"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="16,12"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="8"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="{StaticResource GameEditorBorderBrush}"/>
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter Property="Background" Value="{StaticResource GameEditorAccentBrush}"/>
                                                    </Trigger>
                                                    <Trigger Property="IsEnabled" Value="False">
                                                        <Setter Property="Opacity" Value="0.6"/>
                                                        <Setter Property="Cursor" Value="Arrow"/>
                                                    </Trigger>
                                                    <DataTrigger Binding="{Binding IsEditorActive}" Value="True">
                                                        <Setter Property="Background" Value="{StaticResource GameEditorPrimaryBrush}"/>
                                                    </DataTrigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="GamepadVariant"
                                                         Width="20" Height="20"
                                                         VerticalAlignment="Center">
                                    <materialDesign:PackIcon.Style>
                                        <Style TargetType="materialDesign:PackIcon">
                                            <Setter Property="Foreground" Value="{StaticResource GameEditorPrimaryBrush}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsEditorActive}" Value="True">
                                                    <Setter Property="Foreground" Value="White"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </materialDesign:PackIcon.Style>
                                </materialDesign:PackIcon>
                                <StackPanel Margin="12,0,0,0">
                                    <TextBlock Text="Editor"
                                               FontSize="14"
                                               FontWeight="SemiBold">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="{StaticResource GameEditorTextBrush}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsEditorActive}" Value="True">
                                                        <Setter Property="Foreground" Value="White"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock Text="Scene and object editor"
                                               FontSize="11"
                                               Margin="0,2,0,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="{StaticResource GameEditorTextSecondaryBrush}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsEditorActive}" Value="True">
                                                        <Setter Property="Foreground" Value="White"/>
                                                        <Setter Property="Opacity" Value="0.9"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </Button>

                        <!-- Assets Cooker Tool -->
                        <Button Command="{Binding SwitchToAssetsCookerCommand}"
                                Margin="0,0,0,8"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="16,12"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="8"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="{StaticResource GameEditorBorderBrush}"/>
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter Property="Background" Value="{StaticResource GameEditorAccentBrush}"/>
                                                    </Trigger>
                                                    <Trigger Property="IsEnabled" Value="False">
                                                        <Setter Property="Opacity" Value="0.6"/>
                                                        <Setter Property="Cursor" Value="Arrow"/>
                                                    </Trigger>
                                                    <DataTrigger Binding="{Binding IsAssetsCookerActive}" Value="True">
                                                        <Setter Property="Background" Value="{StaticResource GameEditorAccentBrush}"/>
                                                    </DataTrigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Cog"
                                                         Width="20" Height="20"
                                                         VerticalAlignment="Center">
                                    <materialDesign:PackIcon.Style>
                                        <Style TargetType="materialDesign:PackIcon">
                                            <Setter Property="Foreground" Value="{StaticResource GameEditorAccentBrush}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsAssetsCookerActive}" Value="True">
                                                    <Setter Property="Foreground" Value="White"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </materialDesign:PackIcon.Style>
                                </materialDesign:PackIcon>
                                <StackPanel Margin="12,0,0,0">
                                    <TextBlock Text="Assets Cooker"
                                               FontSize="14"
                                               FontWeight="SemiBold">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="{StaticResource GameEditorTextBrush}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsAssetsCookerActive}" Value="True">
                                                        <Setter Property="Foreground" Value="White"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock Text="Process and optimize assets"
                                               FontSize="11"
                                               Margin="0,2,0,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="{StaticResource GameEditorTextSecondaryBrush}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsAssetsCookerActive}" Value="True">
                                                        <Setter Property="Foreground" Value="White"/>
                                                        <Setter Property="Opacity" Value="0.9"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>

                <!-- Footer -->
                <Border Grid.Row="2"
                        Background="{StaticResource GameEditorBorderBrush}"
                        Padding="16,12">
                    <StackPanel>
                        <TextBlock Text="v1.0.0"
                                   FontSize="10"
                                   Foreground="{StaticResource GameEditorTextSecondaryBrush}"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="UbiArt Framework Tools"
                                   FontSize="10"
                                   Foreground="{StaticResource GameEditorTextSecondaryBrush}"
                                   HorizontalAlignment="Center"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <ContentControl Grid.Column="1"
                        Content="{Binding CurrentToolViewModel}"
                        Margin="0"/>
    </Grid>
</Window>
