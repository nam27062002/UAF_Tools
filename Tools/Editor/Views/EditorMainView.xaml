<UserControl x:Class="DANCustomTools.Tools.Editor.Views.EditorMainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:DANCustomTools.ViewModels"
             xmlns:views="clr-namespace:DANCustomTools.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:DANCustomTools.Converters"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900"
             Background="{StaticResource GameEditorBackgroundBrush}"
             FontFamily="Segoe UI">

    <UserControl.Resources>
        <converters:BoolToOnlineStatusConverter x:Key="BoolToOnlineStatusConverter"/>
        <converters:ObjectToBoolConverter x:Key="ObjectToBoolConverter"/>
        <converters:ConnectionStatusColorConverter x:Key="ConnectionStatusColorConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header/Title Bar -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="16,8">
            <TextBlock Text="Editor"
                       Foreground="White"
                       FontSize="16"
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>
        </Border>

        <!-- Triple Split Layout: Scene Explorer (Left) | Actor Creator (Center) | Properties Editor (Right) -->
        <Grid Grid.Row="1" Margin="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" MinWidth="300"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="1*" MinWidth="350"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="1*" MinWidth="300"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Scene Explorer -->
            <ContentControl Grid.Column="0"
                            Content="{Binding SceneExplorerViewModel}"
                            Margin="0">
                <ContentControl.Resources>
                    <DataTemplate DataType="{x:Type viewModels:SceneExplorerViewModel}">
                        <views:SceneExplorerView DataContext="{Binding}"/>
                    </DataTemplate>
                </ContentControl.Resources>
            </ContentControl>

            <!-- First Splitter -->
            <GridSplitter Grid.Column="1"
                          Width="8"
                          Background="{DynamicResource MaterialDesignDivider}"
                          VerticalAlignment="Stretch"
                          HorizontalAlignment="Center"
                          ResizeBehavior="PreviousAndNext"/>

            <!-- Center Panel: Properties Editor -->
            <ContentControl Grid.Column="2"
                            Content="{Binding PropertiesEditorViewModel}"
                            Margin="0">
                <ContentControl.Resources>
                    <DataTemplate DataType="{x:Type viewModels:PropertiesEditorViewModel}">
                        <views:PropertiesEditorView DataContext="{Binding}"/>
                    </DataTemplate>
                </ContentControl.Resources>
            </ContentControl>

            <!-- Second Splitter -->
            <GridSplitter Grid.Column="3"
                          Width="8"
                          Background="{DynamicResource MaterialDesignDivider}"
                          VerticalAlignment="Stretch"
                          HorizontalAlignment="Center"
                          ResizeBehavior="PreviousAndNext"/>

            <!-- Right Panel: Actor Creator -->
            <ContentControl Grid.Column="4"
                            Content="{Binding ActorCreateViewModel}"
                            Margin="0">
                <ContentControl.Resources>
                    <DataTemplate DataType="{x:Type viewModels:ActorCreateViewModel}">
                        <views:ActorCreateView DataContext="{Binding}"/>
                    </DataTemplate>
                </ContentControl.Resources>
            </ContentControl>

            <!-- Floating Action Button -->
            <!-- Quick Action Buttons -->
            <StackPanel Grid.Column="4"
                        Orientation="Vertical"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Margin="0,0,16,16">
                <Button Style="{StaticResource GameEditorToolButtonStyle}"
                        ToolTip="Connect to Engine"
                        Command="{Binding SceneExplorerViewModel.RefreshCommand}"
                        Margin="2">
                    <materialDesign:PackIcon Kind="Connection" Width="16" Height="16"/>
                </Button>
                <Button Style="{StaticResource GameEditorToolButtonStyle}"
                        ToolTip="Refresh All"
                        Command="{Binding SceneExplorerViewModel.RefreshCommand}"
                        Margin="2">
                    <materialDesign:PackIcon Kind="Refresh" Width="16" Height="16"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="2"
                Background="{DynamicResource MaterialDesignPaper}"
                Opacity="0.95"
                Visibility="Collapsed"
                x:Name="LoadingOverlay">
            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                <ProgressBar Width="50" Height="50"
                             IsIndeterminate="True"
                             Value="0"/>
                <TextBlock Text="Loading..."
                           FontSize="16"
                           Margin="0,16,0,0"
                           HorizontalAlignment="Center"
                           Foreground="{DynamicResource MaterialDesignBody}"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
