<UserControl x:Class="DANCustomTools.Controls.XmlPropertyGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="400">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <!-- Styles for property grid -->
        <Style x:Key="PropertyHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,8,0,4"/>
            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
        </Style>

        <Style x:Key="PropertyValueStyle" TargetType="TextBox">
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontFamily" Value="Consolas, Courier New, monospace"/>
            <Setter Property="Background" Value="{DynamicResource MaterialDesignTextFieldBoxBackground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource MaterialDesignTextFieldBoxHoverBackground}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="CategoryExpander" TargetType="Expander">
            <Setter Property="Margin" Value="0,4"/>
            <Setter Property="IsExpanded" Value="True"/>
            <Setter Property="Background" Value="{DynamicResource MaterialDesignCardBackground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource MaterialDesignDivider}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <DataTemplate x:Key="PropertyItemTemplate">
            <Grid Margin="4,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" MinWidth="100"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding Name}"
                           VerticalAlignment="Center"
                           ToolTip="{Binding Description}"
                           Style="{StaticResource PropertyHeaderStyle}"/>

                <ContentPresenter Grid.Column="1"
                                  Content="{Binding}"
                                  ContentTemplate="{StaticResource StringPropertyTemplate}"/>
            </Grid>
        </DataTemplate>

        <!-- Property value templates -->
        <DataTemplate x:Key="StringPropertyTemplate">
            <TextBox Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource PropertyValueStyle}"/>
        </DataTemplate>

        <DataTemplate x:Key="NumberPropertyTemplate">
            <TextBox Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource PropertyValueStyle}"/>
        </DataTemplate>

        <DataTemplate x:Key="BooleanPropertyTemplate">
            <CheckBox IsChecked="{Binding Value, Mode=TwoWay}"
                      VerticalAlignment="Center"
                      Margin="0,0,0,8"/>
        </DataTemplate>

        <DataTemplate x:Key="EnumPropertyTemplate">
            <ComboBox ItemsSource="{Binding EnumValues}"
                      SelectedItem="{Binding Value, Mode=TwoWay}"
                      Margin="0,0,0,8"/>
        </DataTemplate>
    </UserControl.Resources>

    <materialDesign:Card Style="{StaticResource GameEditorCardStyle}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="{StaticResource GameEditorAccentBrush}"
                    Padding="12,8">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Settings"
                                             Width="20" Height="20"
                                             VerticalAlignment="Center"
                                             Foreground="White"/>
                    <TextBlock Text="Actor Properties"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="8,0,0,0"/>

                    <!-- Search box -->
                    <TextBox x:Name="SearchBox"
                             materialDesign:HintAssist.Hint="Search properties..."
                             materialDesign:HintAssist.IsFloating="False"
                             Width="150"
                             Margin="16,0,0,0"
                             FontSize="11"
                             VerticalAlignment="Center"
                             Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
            </Border>

            <!-- Properties Grid -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <ItemsControl ItemsSource="{Binding FilteredProperties}"
                              ItemTemplate="{StaticResource PropertyItemTemplate}">
                    <ItemsControl.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.ContainerStyle>
                                <Style TargetType="GroupItem">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="GroupItem">
                                                <Expander Style="{StaticResource CategoryExpander}">
                                                    <Expander.Header>
                                                        <StackPanel Orientation="Horizontal">
                                                            <materialDesign:PackIcon Kind="Folder"
                                                                                     Width="16" Height="16"
                                                                                     VerticalAlignment="Center"
                                                                                     Margin="0,0,8,0"/>
                                                            <TextBlock Text="{Binding Name}"
                                                                       FontWeight="SemiBold"
                                                                       VerticalAlignment="Center"/>
                                                            <TextBlock Text="{Binding Items.Count, StringFormat='({0})'}"
                                                                       FontSize="11"
                                                                       Opacity="0.7"
                                                                       VerticalAlignment="Center"
                                                                       Margin="4,0,0,0"/>
                                                        </StackPanel>
                                                    </Expander.Header>
                                                    <ItemsPresenter Margin="16,8"/>
                                                </Expander>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </GroupStyle.ContainerStyle>
                        </GroupStyle>
                    </ItemsControl.GroupStyle>
                </ItemsControl>
            </ScrollViewer>

            <!-- Status Bar -->
            <Border Grid.Row="2"
                    Background="{DynamicResource MaterialDesignDivider}"
                    Padding="12,6">
                <DockPanel>
                    <TextBlock Text="{Binding PropertyCount, StringFormat=\{0\} properties}"
                               FontSize="11"
                               Opacity="0.8"
                               DockPanel.Dock="Left"/>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                DockPanel.Dock="Right">
                        <Button Style="{StaticResource GameEditorToolButtonStyle}"
                                Command="{Binding ExpandAllCommand}"
                                Padding="8,4"
                                FontSize="10"
                                Content="Expand All"/>
                        <Button Style="{StaticResource GameEditorToolButtonStyle}"
                                Command="{Binding CollapseAllCommand}"
                                Padding="8,4"
                                FontSize="10"
                                Content="Collapse All"/>
                    </StackPanel>
                </DockPanel>
            </Border>

            <!-- Loading/Empty State -->
            <Grid Grid.Row="1">
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding HasProperties}" Value="False">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                <StackPanel VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Opacity="0.6">
                    <materialDesign:PackIcon Kind="Information"
                                             Width="48" Height="48"
                                             HorizontalAlignment="Center"/>
                    <TextBlock Text="No properties to display"
                               FontSize="14"
                               HorizontalAlignment="Center"
                               Margin="0,8,0,0"/>
                    <TextBlock Text="Select an actor or component to view its properties"
                               FontSize="11"
                               HorizontalAlignment="Center"
                               Opacity="0.7"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Grid>
        </Grid>
    </materialDesign:Card>
</UserControl>